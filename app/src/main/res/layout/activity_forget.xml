<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".RegisterActivity">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#90EE90"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_height="wrap_content"
            android:layout_width="30dp"
            android:src="@mipmap/ic_leftarcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="132dp"
            android:layout_marginEnd="130dp"
            android:layout_marginRight="128dp"
            android:layout_marginBottom="7dp"
            android:text="忘记密码"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </RelativeLayout>
    <com.example.garbagesorting.view.WaveView
        android:id="@+id/view_speech_listen"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:rotation="180"
        android:layout_marginTop="50dp" />
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentTop="true"
        android:background="#FCFCFC"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/line_phone"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/shurukuang5_register"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号码："
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:hint="请输入手机号码"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_validation"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"

                android:background="@drawable/shurukuang5_register"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验  证  码："
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvCode"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shurukuang_getyanzheng"
                    android:text="  获取验证码"
                    android:textColor="#FF4500" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_new_password"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shurukuang5_register"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新  密  码："
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/new_password"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_confirm_password"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shurukuang5_register"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认密码："
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/confirm_password"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:hint="请输入确认密码"
                    android:inputType="textPassword"
                    android:textSize="15dp" />
            </LinearLayout>

            <android.widget.Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_selector"
                android:text="点击进行下一步"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>