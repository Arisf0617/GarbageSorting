<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line_list"
        style="@style/search_list_item">
        <ImageView
            android:layout_marginTop="15dp"
            android:id="@+id/iv_things"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/list_things"/>
        <LinearLayout
            android:layout_width="180dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_text"
                    android:layout_width="wrap_content"
                    android:height="80dp"
                    android:textSize="15dp"
                    android:text="text"
                    style="@style/MyListText"/>
                <TextView
                    android:id="@+id/item_date"
                    android:layout_width="150dp"
                    android:height="20dp"
                    android:textSize="15dp"
                    android:textColor="@color/list_grey"
                    android:text="date"
                    style="@style/MyListText"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/item_phone"
        android:text="phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/item_collectionphone"
        android:text="collectionphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>